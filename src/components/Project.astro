---
import { Image } from 'astro:assets'
import GithubLogo from '../assets/github.svg?raw'
import LinkIcon from '../assets/link.svg?raw'

export interface Props {
  title: string
  description: string
  technologies: string[]
  cover: ImageMetadata
  coverAlt: string
  demoLink: string
  repoLink: string
  inverted?: boolean
}

const {
  title,
  description,
  technologies,
  cover,
  coverAlt,
  demoLink,
  repoLink,
  inverted,
} = Astro.props

const coverPosition = inverted ? 'left' : 'right'
---

<div class="project-container">
  <div class=`presentation ${inverted ? "right" : "left"}`>
    <h3>{title}</h3>
    <p class="description">{description}</p>
    <ul class="technologies">
      {technologies.map((technology) => <li>{technology}</li>)}
    </ul>
  </div>
  <a
    href={demoLink}
    class={'project-image-link ' + coverPosition}
    target="_blank"
  >
    <Image class="project-image" src={cover} alt={coverAlt} />
  </a>
  <div
    class=`project-links ${inverted ? "right" : "left"} ${inverted && "inverted"}`
  >
    <a class="link website" href={demoLink} target="_blank">
      <span>Voir</span>
      <Fragment set:html={LinkIcon} />
    </a>
    <a class="link github" href={repoLink} target="_blank">
      <Fragment set:html={GithubLogo} />
      <span>Github Repo</span>
    </a>
  </div>
</div>

<style lang="scss">
  .project-container {
    --border-radius: 16px;
    width: clamp(700px, 75%, 940px);
    aspect-ratio: 2;
    position: relative;
    .left {
      left: 0;
    }
    .right {
      right: 0;
    }
    .presentation {
      width: max(60%, 500px);
      position: absolute;
      top: 0;
      aspect-ratio: 16/9;
      background-color: var(--white);
      border-radius: var(--border-radius);
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.25);
      padding: 1rem 2rem;
      z-index: 1;
      display: flex;
      flex-direction: column;
      h3 {
        color: var(--black);
        font-size: 1.5rem;
        margin: 1rem 0;
        text-align: center;
      }
      .description {
        font-size: 0.9rem;
        color: var(--black);
        margin: 0 0 1rem 0;
      }
      .technologies {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin: 0 0 0.6rem 0;
        list-style: none;
        padding: 0;
        li {
          font-size: 1rem;
          white-space: nowrap;
          padding: 0.5rem 1rem;
          border-radius: 6px;
          color: var(--white);
          background-color: var(--black);
        }
      }
    }
    .project-image-link {
      position: absolute;
      bottom: 0;
      width: max(60%, 500px);
      aspect-ratio: 16/9;
    }
    .project-image {
      height: auto;
      width: 100%;
      object-fit: cover;
      border-radius: var(--border-radius);
    }
    .project-links {
      width: 40%;
      position: absolute;
      bottom: 2%;
      display: flex;
      white-space: nowrap;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      &.inverted {
        flex-direction: row-reverse;
      }
      .link {
        height: fit-content;
        display: flex;
        align-items: center;
        transition: background-color var(--theme-transition);
        span {
          transition: color var(--theme-transition);
        }
        &.website {
          padding: 0.6rem 1.2rem;
          background-color: var(--text);
          border-radius: 10px;
          gap: 0.8rem;
          span {
            color: var(--background);
            font-weight: 500;
            letter-spacing: 0.5px;
            font-size: 1.2rem;
          }
        }
        &.website :global(svg) {
          height: 22px;
          width: 22px;
          color: var(--background);
        }
        &.github {
          gap: 0.5rem;
          span {
            color: var(--text);
            font-size: 1rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            white-space: nowrap;
          }
        }
        &.github :global(svg) {
          height: 22px;
          width: 22px;
          color: var(--text);
        }
        & :global(path) {
          transition: color var(--theme-transition);
        }
      }
    }
  }

  @media (max-width: 1150px) {
    .project-container {
      .project-links {
        bottom: -18%;
        left: 50%;
        transform: translateX(-50%);
      }
    }
  }

  @media (max-width: 768px) {
    .project-container {
      width: 100%;
      aspect-ratio: inherit;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      .presentation {
        position: static;
        width: max(60%, 450px);
      }
      .project-image-link {
        position: static;
        width: max(60%, 450px);
      }
      .project-links {
        position: static;
        margin-top: 1rem;
        width: 100%;
        flex-direction: row-reverse;
        flex-wrap: wrap;
        transform: translateX(0);
      }
    }
  }
  @media (max-width: 480px) {
    .project-container {
      .presentation {
        width: 100%;
      }
      .project-image-link {
        width: 100%;
      }
      .presentation {
        padding: 0.8rem 1.2rem;
        .technologies {
          flex-wrap: wrap;
          gap: 0.8rem;
          justify-content: space-evenly;
          li {
            font-size: 0.9rem;
            padding: 0.5rem 0.8rem;
          }
        }
      }
    }
  }
</style>
