---
export interface Props {
  title: string
  id: string
}

const { title, id } = Astro.props
---

<section id={id}>
  <h2>{title}</h2>
  <slot />
</section>

<style lang="scss">
  section {
    padding: 2rem 1rem;
    position: relative;
    h2 {
      font-size: 2.4rem;
      text-align: center;
      transition: color var(--theme-transition);
    }
  }
</style>
