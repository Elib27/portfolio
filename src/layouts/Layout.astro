---
import Loader from '../components/Loader.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Loader />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --secondary: #d2d4ff;
    --accent: #585efb;
    --black: #121212;
    --gray: #e6e6f0;
    --white: #fafafa;
    --text: var(--black);
    --background: var(--white);
    --nav-background: var(--white);
    --highlight: var(--secondary);
    --radius: 18px;
    --theme-transition: 0.15s ease-out;
    &.dark-theme {
      --text: var(--white);
      --background: #02031d;
      --nav-background: #282870;
      --highlight: var(--accent);
    }
  }
  html {
    font-family: 'Figtree', sans-serif;
    background-color: var(--background);
    scroll-behavior: smooth;
    transition: background-color var(--theme-transition);
  }
  body {
    margin: 0;
    overflow-x: hidden;
  }
  h1,
  h2,
  h3,
  p,
  span {
    color: var(--text);
  }
  a {
    color: var(--text);
    text-decoration: none;
    line-height: 0;
    outline-color: var(--accent);
  }
  button {
  }
  p {
    font-size: 1rem;
    margin: 0;
    transition: color var(--theme-transition);
  }
  * {
    box-sizing: border-box;
  }
</style>

<script>
  window.addEventListener('load', () => {
    console.clear()
    console.log(
      '%c BAS Eliot - Portfolio ',
      'color: #fafafa; background-color: #585efb; font-size: 30px; font-weight: 700'
    )
  })
</script>
